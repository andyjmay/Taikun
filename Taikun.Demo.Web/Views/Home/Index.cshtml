@section LazyScripts {
  @Scripts.Render("~/bundles/app")
}

<div class="container-fluid" id="taikun">
  <div class="row-fluid">
    <div class="span3">
      <div class="pull-right">
        <button class="btn btn-small btn-success"><i class="icon-plus icon-white"></i> Create New Database</button>
      </div>
      <div class="well">
        <h2>Databases</h2>
        <ul class="nav nav-list" id="databases"></ul>
      </div>
    </div>
    <div class="span9">
      <div id="selectedDatabase"></div>
      <div id="selectedTable"></div>
    </div>
  </div>
</div>

<script type="text/template" id="database-template">
  <a href="#/databases/{{Name}}">
    <div>
      <strong>{{Name}}</strong>
    </div>
  </a>
</script>

<script type="text/template" id="table-template">
  {{#each Tables}}
    <li><a href="#/databases/{{DatabaseName}}/{{TableName}}">{{TableName}}</a><li>
  {{/each}}
</script>

<script type="text/template" id="selected-database-template">
  <h3>{{Name}}</h3>
  <em>{{Description}}</em>
  
  <div class="table-list">
    <strong>Tables</strong>
    <ul id="tables" class="unstyled"></ul>
  </div>
</script>

<script type="text/template" id="selected-table-template">
  <table id="columns" class="table table-striped">
    <thead>
      <tr>
        <th>Column Name</th>
        <th>Data Type</th>
        <th>Max Length</th>
      </tr>
    </thead>
    <tbody>
      {{#each Columns}}
        <tr>
          <td>{{ColumnName}}</td>
          <td>{{DataType}}</td>
          <td>{{MaxLength}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</script>