<Controls:MetroWindow x:Class="Taikun.Demo.WPF.Views.Main"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:Views="clr-namespace:Taikun.Demo.WPF.Views" Title="Taikun Demo" 
                      Height="350" Width="525"
                      DataContext="{Binding Main, Source={StaticResource Locator}}">
  <Controls:MetroContentControl>
    <Grid>
      <TabControl>
        <TabItem x:Name="ProjectsTab" Header="Projects">
          <Views:Projects Margin="5" />
        </TabItem>
        <TabItem x:Name="NewTab" Header="New">
          <Views:CreateProject Margin="5" />
        </TabItem>
        <TabItem x:Name="TablesTab" Header="Tables" Visibility="{Binding Path=ProjectIsSelected, Converter={StaticResource boolToVisibility}}">
          <Views:ProjectTables Margin="5" />
        </TabItem>
      </TabControl>
    </Grid>
  </Controls:MetroContentControl>
</Controls:MetroWindow>
